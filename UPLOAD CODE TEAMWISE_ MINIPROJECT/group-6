DATABASE CREATION:-///**

Create database test;
use test;
CREATE TABLE student (
   `id` int(3) primary key,
   `first_name` varchar(20), 
   `last_name` varchar(20),
   `username` varchar(250),
   `password` varchar(20),
   `address` varchar(45),
   `contact` varchar(45),
	CGPA DOUBLE,
	College_name varchar(20));


